          <span class="class-name">{{localize "DANGEROUSGARY.Talent.Classes.cleric"}} ({{localize "DANGEROUSGARY.Labels.short.str"}})</span>
          <input type="number" name="system.classes.cleric" value="{{system.classes.cleric}}" min="0" max="9" />
        </div>
        <span class="class-talents-label">{{localize "DANGEROUSGARY.Labels.long.talents"}}</span>
        <div class="class-talents">
          {{#each talentsByClass.cleric as |talent|}}
            <div class="talent" data-item-id="{{talent.id}}">
              <span class="talent-name" data-tooltip="{{{talent.enrichedDescription}}}" data-tooltip-direction="UP">{{talent.name}}{{#if talent.system.special}}*{{/if}} ({{talent.system.level}})</span>
              <div class="talent-controls">
                <span class="rollable" data-action="rollClassSave" data-talent-class="{{talent.system.talentClass}}" data-item-id="{{talent.id}}" data-tooltip="{{localize 'DANGEROUSGARY.RollClassSave'}}" data-tooltip-direction="UP"><i class="fas fa-dice-d20"></i></span>
                <a data-action="edit" data-item-id="{{talent.id}}"><i class="fas fa-edit"></i></a>
                <a data-action="delete" data-item-id="{{talent.id}}"><i class="fas fa-trash"></i></a>
