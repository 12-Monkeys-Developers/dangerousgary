<div class="standard-form talent">
  <section class="talent-main">
    <div class="header">
      <img src="{{item.img}}" data-edit="img" data-action="editImage" data-tooltip="{{item.name}}" />
      {{formInput fields.name value=source.name }}
    </div>
    <div class="details">
      <fieldset>
        <legend>{{localize "DANGEROUSGARY.Labels.details"}}</legend>
        {{formGroup systemFields.talentClass value=system.talentClass choices=talentClassChoices }}
        {{formGroup systemFields.level value=system.level }}
        {{formGroup systemFields.special value=system.special }}
      </fieldset>
    </div>
  </section>
  <section class="talent-description">
    <fieldset>
      <legend>{{localize "DANGEROUSGARY.Talent.FIELDS.description.label"}}</legend>
      {{formInput
        systemFields.description
        enriched=enrichedDescription
        value=system.description
        documentUUID=item.uuid
        name="system.description"
        collaborate="false"
        toggled="true"
        height="50"
      }}
    </fieldset>
  </section>
</div>
